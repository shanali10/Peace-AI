<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".Fragments.CreatePostFragment">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="@dimen/_25sdp"
        android:layout_height="@dimen/_25sdp"
        android:layout_marginStart="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_30sdp"
        android:src="@drawable/create_post_icon"
        app:tint="@color/black"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/createPostIntroText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_10sdp"
        android:layout_marginEnd="@dimen/_10sdp"
        android:fontFamily="@font/baloo_bhai"
        android:layout_marginTop="@dimen/_20sdp"
        android:text="Write down your thoughts and share them with others.\nThis will help you feel calm and relieve stress. "
        android:textColor="@color/black"
        android:textSize="@dimen/_13sdp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView2" />

    <EditText
        android:id="@+id/createPostEditText"
        android:layout_width="0dp"
        android:layout_height="@dimen/_150sdp"
        android:layout_marginStart="@dimen/_10sdp"
        android:layout_marginEnd="@dimen/_10sdp"
        android:background="@drawable/edit_text_bg"
        android:fontFamily="@font/amaranth"
        android:gravity="top"
        android:layout_marginTop="@dimen/_20sdp"
        android:hint="What's on your mind?"
        android:inputType="text|textMultiLine"
        android:padding="@dimen/_10sdp"
        android:singleLine="false"
        android:textColor="@color/black"
        android:textIsSelectable="true"
        android:textSize="@dimen/_14sdp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/createPostIntroText" />

    <Button
        android:id="@+id/postBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Post"
        android:layout_marginEnd="@dimen/_7sdp"
        android:layout_marginTop="@dimen/_7sdp"
        android:textSize="@dimen/_13sdp"
        android:fontFamily="@font/baloo_bhai"
        android:backgroundTint="@color/mainBlueColor"
        app:layout_constraintEnd_toEndOf="@+id/createPostEditText"
        app:layout_constraintTop_toBottomOf="@+id/createPostEditText" />

</androidx.constraintlayout.widget.ConstraintLayout>