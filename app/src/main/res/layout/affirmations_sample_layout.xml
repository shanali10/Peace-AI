<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/_6sdp"
    app:cardCornerRadius="@dimen/_10sdp"
    app:cardElevation="@dimen/_20sdp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/_12sdp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginTop="@dimen/_6sdp">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/affirmation_image"
                android:layout_width="@dimen/_40sdp"
                android:layout_height="@dimen/_40sdp"
                app:civ_border_width="@dimen/_1sdp"
                android:layout_gravity="top"
                android:src="@drawable/affirmation_placeholder"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_13sdp"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/affirmation_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/baloo_bhai"
                    android:textColor="@color/black"
                    android:text="Affirmation Title"
                    android:textSize="@dimen/_13sdp" />

                <TextView
                    android:id="@+id/affirmation_theme"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_1sdp"
                    android:fontFamily="@font/amaranth"
                    android:text="Affirmation Theme:"
                    android:textColor="@color/redColor"
                    android:textSize="@dimen/_11sdp"
                    tools:ignore="TextSizeCheck" />

                <TextView
                    android:id="@+id/preferred_affirmation"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_1sdp"
                    android:fontFamily="@font/amaranth"
                    android:text="Preferred Affirmation:"
                    android:textColor="@color/redColor"
                    android:textSize="@dimen/_11sdp"
                    tools:ignore="TextSizeCheck" />

            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="end"
            android:layout_marginTop="@dimen/_8sdp">

            <ImageView
                android:id="@+id/copy_icon"
                android:layout_width="@dimen/_25sdp"
                android:layout_height="@dimen/_25sdp"
                android:layout_marginEnd="@dimen/_2sdp"
                android:padding="@dimen/_3sdp"
                app:srcCompat="@drawable/copy_icon"
                app:tint="@color/blueColor" />

            <ImageView
                android:id="@+id/share_icon"
                android:layout_width="@dimen/_25sdp"
                android:layout_height="@dimen/_25sdp"
                android:layout_marginEnd="@dimen/_2sdp"
                android:padding="@dimen/_3sdp"
                app:srcCompat="@drawable/share_icon"
                app:tint="@color/blueColor" />

            <ImageView
                android:id="@+id/play_icon"
                android:layout_width="@dimen/_25sdp"
                android:layout_height="@dimen/_25sdp"
                android:layout_marginEnd="@dimen/_2sdp"
                android:padding="@dimen/_3sdp"
                app:srcCompat="@drawable/play_icon"
                app:tint="@color/blueColor" />

            <ImageView
                android:id="@+id/pause_icon"
                android:layout_width="@dimen/_25sdp"
                android:layout_height="@dimen/_25sdp"
                android:layout_marginEnd="@dimen/_2sdp"
                android:padding="@dimen/_3sdp"
                android:visibility="gone"
                app:srcCompat="@drawable/pause_icon"
                app:tint="@color/blueColor" />

            <ImageView
                android:id="@+id/favorite_icon"
                android:layout_width="@dimen/_25sdp"
                android:layout_height="@dimen/_25sdp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:padding="@dimen/_3sdp"
                app:srcCompat="@drawable/favorite_icon"
                app:tint="@color/blueColor" />

            <ImageView
                android:id="@+id/favorite_icon_filled"
                android:layout_width="@dimen/_25sdp"
                android:layout_height="@dimen/_25sdp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:padding="@dimen/_3sdp"
                android:visibility="gone"
                app:srcCompat="@drawable/favorite_icon_filled"
                app:tint="@color/blueColor" />
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>
