<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:padding="@dimen/_11sdp"
    tools:context=".Activities.TherapySessionActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="@dimen/_90sdp"
            android:layout_height="@dimen/_90sdp"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/_35sdp"
            android:src="@drawable/therapy_session_design" />

        <TextView
            android:id="@+id/mainTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_10sdp"
            android:fontFamily="@font/baloo_bhai"
            android:gravity="start"
            android:text="Hi Shan, I am your Mental Health Therapist AI"
            android:textColor="@color/black"
            android:textSize="@dimen/_17sdp" />

        <TextView
            android:id="@+id/aiDescription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="I'll be asking you questions based on your preferences, such as your profession, mood, personal goals, sleep hours and our previous session history. Iâ€™ll also provide recommendations based on our conversation. So Let's begin! ðŸ™‚"
            android:textColor="@color/black"
            android:fontFamily="@font/actor"
            android:layout_marginTop="@dimen/_15sdp"
            android:textSize="@dimen/_12sdp"
            tools:ignore="TextSizeCheck" />

        <ImageView
            android:id="@+id/startIcon"
            android:layout_width="@dimen/_90sdp"
            android:layout_height="@dimen/_90sdp"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/_70sdp"
            android:src="@drawable/start_icon_new" />

        <TextView
            android:id="@+id/questionText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_20sdp"
            android:layout_marginEnd="@dimen/_5sdp"
            android:fontFamily="@font/actor"
            android:text="How is your coding journey going Shan?"
            android:textColor="@color/black"
            android:textSize="@dimen/_13sdp"
            android:visibility="gone"
            tools:ignore="TextSizeCheck" />

        <LinearLayout
            android:id="@+id/inputLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_10sdp"
            android:orientation="horizontal"
            android:visibility="gone">

            <EditText
                android:id="@+id/answerEditText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/edit_text_bg"
                android:fontFamily="@font/actor"
                android:gravity="top"
                android:hint="Your answer..."
                android:inputType="text|textMultiLine"
                android:lines="4"
                android:padding="@dimen/_10sdp"
                android:textColor="@color/black" />

            <ImageView
                android:id="@+id/mic_icon"
                android:layout_width="@dimen/_40sdp"
                android:layout_height="@dimen/_40sdp"
                android:layout_marginStart="@dimen/_10sdp"
                android:src="@drawable/mic_icon"
                android:visibility="visible" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/submitLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_5sdp"
            android:orientation="horizontal"
            android:visibility="gone">

            <Button
                android:id="@+id/submitBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/mainBlueColor"
                android:fontFamily="@font/baloo_bhai"
                android:text="Submit"
                android:textSize="@dimen/_11sdp"
                tools:ignore="TextSizeCheck" />

            <TextView
                android:id="@+id/questionsRemainingText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_10sdp"
                android:fontFamily="@font/baloo_bhai"
                android:text="Questions Remaining: 10"
                android:textColor="@color/black"
                android:textSize="@dimen/_12sdp"
                android:visibility="gone"
                tools:ignore="TextSizeCheck" />

            <Button
                android:id="@+id/endSession"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_25sdp"
                android:backgroundTint="@color/redColor"
                android:fontFamily="@font/baloo_bhai"
                android:text="End Session"
                android:textSize="@dimen/_11sdp"
                tools:ignore="TextSizeCheck" />

        </LinearLayout>

    </LinearLayout>
</ScrollView>
